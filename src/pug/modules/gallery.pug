    var gallerySettings = {
        slidesPerView: 'auto',
        loop: false,
        spaceBetween: 20,
        freeMode: true,
        navigation: {
            enabled: false
        },
        pagination: {
            el: ".gallery__pagination",
            dynamicBullets: true,
            dynamicMainBullets: 3,
            clickable: true
        },
        breakpoints: {
            580: {
                slidesPerView: 3,
                spaceBetween: 30,
